<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="sample.AddEditMemberController">
    <bottom>
        <HBox alignment="CENTER_RIGHT" minHeight="-Infinity" minWidth="-Infinity" prefHeight="60.0"
              BorderPane.alignment="CENTER">
            <children>
                <Button mnemonicParsing="false" text="Отмена">
                    <HBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </HBox.margin>
                </Button>
                <Button fx:id="doneBtn" mnemonicParsing="false" onAction="#done" prefHeight="25.0" text="Готово"
                        HBox.hgrow="NEVER">
                    <HBox.margin>
                        <Insets bottom="5.0" left="5.0" right="15.0" top="5.0"/>
                    </HBox.margin>
                </Button>
            </children>
        </HBox>
    </bottom>
    <center>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" hmax="0.0" prefHeight="440.0" prefViewportHeight="500.0"
                    prefViewportWidth="385.0" prefWidth="400.0">
            <content>
                <VBox fx:id="parent"/>
            </content>
        </ScrollPane>
    </center>
</BorderPane>
